        <h3>Here's the link:</h3>
        <p><a href="<%= info.url %>" target="_blank"><%= info.url %></a></p>
        <h3>Here's the description:</h3>
        <p><%= info.description %></p>
      </div>
    </div>
  <% end %> <!--end of 1st item-->

